<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://image.freepik.com/fotos-gratis/selecao-de-varios-coqueteis-na-mesa_140725-2909.jpg);">
  <div class="container">
    <h1>Check the <strong>greatest</strong> cocktails around!</h1>
  </div>
</div>

<div class="cards p-4">
  <% @cocktails.each do |cocktail| %>
    <% if cocktail.image.attached? %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.image.key %>')">
      <%= link_to cocktail.name, cocktail_path(cocktail)%>
      </div>
    <% else %>
      <div class="card-category" style="background-color: black">
      <%= link_to cocktail.name, cocktail_path(cocktail)%>
      </div>
    <% end %>
  <% end%>
</div>
<div class="p-4">
  <%= link_to "Create Cocktail", new_cocktail_path, class: "btn btn-dark" %>
</div>
